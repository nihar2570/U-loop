{

  "manifest_version": 2,

"name": "Uloop",
"description": "loops a video on youtube",
"version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [ "background.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "js": [ "background.js"]
  },
	"permissions":["https://www.youtube.com/*"]
}